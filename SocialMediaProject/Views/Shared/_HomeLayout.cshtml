<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Social Media</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Content/Home/Index/Desktop/script.js"></script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Shared/Home/style.css")
    @Styles.Render("~/Content/home/index/desktop/style.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="logo">
                <input type="image" src="https://i.imgur.com/DZE7h4J.png" class="logo-icon" />
            </div>
            <input class="search col-lg-6" type="search" placeholder="  |  Search">
            <i class="fa fa-user-circle" type="button" data-toggle="dropdown"></i>
            <ul class="dropdown-menu shadow">
                <i class="fa fa-sort-up"></i>
                <li class="dropdown-header">Sign In</li>
                <form>
                    <input type="email" class="dropdown-form-control" placeholder="Email or nickname" />
                    <input type="password" class="dropdown-form-control" placeholder="Password" />
                    <div class="dropdown-button">Login</div>
                </form>
                <li class="divider"></li>
            </ul>
        </div>
        @RenderBody()

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <div class="footer">
            <p>Copyright 2019 João Pedro PA Silva</p>
        </div>
    </body>
</html>

